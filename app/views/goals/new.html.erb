<h2>New Goal</h2>

<%= render 'shared/errors' %>
<%= render 'shared/notices' %>

<form action="<%= goals_url %>" method="post">
    <%= auth_token %>

    <label for="title">Title</label>
    <input type="text" name="goal[title]" id="title">

    <br>
    <br>
    
    <input type="radio" name="goal[private]" value="false" id="public" checked>
    <label for="public">Public</label>

    <input type="radio" name="goal[private]" value="true" id="private">
    <label for="private">Private</label>

    <br>
    <br>

    <input type="radio" name="goal[completed]" value="false" id="ongoing" checked>
    <label for="ongoing">Ongoing</label>

    <input type="radio" name="goal[completed]" value="true" id="finished">
    <label for="finished">Completed</label>

    <br>
    <br>

    <label for="description">Description</label>
    <br>
    <textarea name="goal[description]" id="description" cols="30" rows="10"></textarea>

    <br>

    <input type="submit" value="Create">

</form>

<br>

<%= link_to 'Back', user_url(current_user) %>
